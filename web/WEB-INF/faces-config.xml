<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <validator>
        <validator-id>passwordValidator</validator-id>
        <validator-class>controller.RegisterController</validator-class>
    </validator>


    <managed-bean>
        <managed-bean-name>UserBean</managed-bean-name>
        <managed-bean-class>model.UserBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>MemoryBean</managed-bean-name>
        <managed-bean-class>model.MemoryBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>

